/*
 * Settings
 */

/**
 * Used to access settings.
 */
function lingwo_import_settings($name, $value = NULL) {
  static $_settings = array(
    'field_senses'           => NULL,
    'field_fields'           => NULL,
    'field_pron'             => NULL,
    'field_source_name'      => NULL,
    'field_source_url'       => NULL,
    'field_source_copyright' => NULL,
    'field_source_license'   => NULL,
    'field_source_raw'       => NULL,
    'field_source_timestamp' => NULL,
  );

  if (is_null($name)) {
    return $_settings;
  }

  if (!array_key_exists($name, $_settings)) {
    trigger_error(t('No such lingwo_import_setting: @name', array('@name' => $name)), E_USER_ERROR);
    return NULL;
  }

  if (is_null($value)) {
    return variable_get('lingwo_import_'. $name, $_settings[$name]);
  }

  variable_set('lingwo_import_'. $name, $value);
}

