  $items = array();
  $items['admin/settings/lingwo_dictionary/import'] = array(
    'title' => 'Import',
    'description' => 'Settings for Lingwo Import module.',
    'access arguments' => array('administer site configuration'),
    'page callback' => 'drupal_get_form',
    'page arguments' => array('lingwo_import_admin_settings'),
    'file' => 'lingwo_import.admin.inc',
    'type' => MENU_LOCAL_TASK,
  );

  return $items;
}

