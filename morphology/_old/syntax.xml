<?xml version="1.0"?>

<!--
  NOTE: This isn't real syntax definition, but its the simplest solution to my
  current problem..
  -->

<rules>
	<rule-set name="entry.noun.function.adjective_agreement">
		<!-- arguments: form -->
		<switch>
			<case>
				<equals variable="form" value="nominative.singular"/>

				<switch>
					<case>
						<entry-option name="gender" value="masculine"/>
						<return value="nominative.singular.masculine"/>
					</case>
					<case>
						<entry-option name="gender" value="feminine"/>
						<return value="nominative.singular.feminine"/>
					</case>
					<case>
						<entry-option name="gender" value="neuter"/>
						<return value="nominative.singular.neuter"/>
					</case>
				</switch>
			</case>
			<case>
				<equals variable="form" value="nominative.plural"/>

				<switch>
					<case>
						<entry-class classes="virile"/>
						<return value="nominative.plural.virile"/>
					</case>
					<case>
						<always/>
						<return value="nominative.plural.non_virile"/>
					</case>
				</switch>
			</case>
			<case>
				<equals variable="form" value="accusative.singular"/>

				<switch>
					<case>
						<entry-option name="gender" value="masculine"/>

						<switch>
							<case>
								<entry-class classes="animate"/>
								<return value="accusative.singular.masculine.animate"/>
							</case>
							<case>
								<always/>
								<return value="accusative.singular.masculine.inanimate"/>
							</case>
						</switch>
					</case>
					<case>
						<entry-option name="gender" value="feminine"/>
						<return value="accusative.singular.feminine"/>
					</case>
					<case>
						<entry-option name="gender" value="neuter"/>
						<return value="accusative.singular.neuter"/>
					</case>
				</switch>
			</case>
			<case>
				<equals variable="form" value="accusative.plural"/>

				<switch>
					<case>
						<entry-class classes="virile"/>
						<return value="accusative.plural.virile"/>
					</case>
					<case>
						<always/>
						<return value="accusative.plural.non_virile"/>
					</case>
				</switch>
			</case>
			<case>
				<equals variable="form" value="genitive.singular"/>

				<switch>
					<case>
						<entry-option name="gender" value="masculine"/>
						<return value="genitive.singular.masculine"/>
					</case>
					<case>
						<entry-option name="gender" value="feminine"/>
						<return value="genitive.singular.feminine"/>
					</case>
					<case>
						<entry-option name="gender" value="neuter"/>
						<return value="genitive.singular.neuter"/>
					</case>
				</switch>
			</case>
			<case>
				<equals variable="form" value="genitive.plural"/>
				<return value="genitive.plural"/>
			</case>
			<case>
				<equals variable="form" value="dative.singular"/>

				<switch>
					<case>
						<entry-option name="gender" value="masculine"/>
						<return value="dative.singular.masculine"/>
					</case>
					<case>
						<entry-option name="gender" value="feminine"/>
						<return value="dative.singular.feminine"/>
					</case>
					<case>
						<entry-option name="gender" value="neuter"/>
						<return value="dative.singular.neuter"/>
					</case>
				</switch>
			</case>
			<case>
				<equals variable="form" value="dative.plural"/>
				<return value="dative.plural"/>
			</case>
			<case>
				<equals variable="form" value="instrumental.singular"/>

				<switch>
					<case>
						<entry-option name="gender" value="masculine"/>
						<return value="instrumental.singular.masculine"/>
					</case>
					<case>
						<entry-option name="gender" value="feminine"/>
						<return value="instrumental.singular.feminine"/>
					</case>
					<case>
						<entry-option name="gender" value="neuter"/>
						<return value="instrumental.singular.neuter"/>
					</case>
				</switch>
			</case>
			<case>
				<equals variable="form" value="instrumental.plural"/>
				<return value="instrumental.plural"/>
			</case>
			<case>
				<equals variable="form" value="locative.singular"/>

				<switch>
					<case>
						<entry-option name="gender" value="masculine"/>
						<return value="locative.singular.masculine"/>
					</case>
					<case>
						<entry-option name="gender" value="feminine"/>
						<return value="locative.singular.feminine"/>
					</case>
					<case>
						<entry-option name="gender" value="neuter"/>
						<return value="locative.singular.neuter"/>
					</case>
				</switch>
			</case>
			<case>
				<equals variable="form" value="locative.plural"/>
				<return value="locative.plural"/>
			</case>
		</switch>
	</rule-set>
</rules>

